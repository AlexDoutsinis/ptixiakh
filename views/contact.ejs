<% include  _layouts/blogHeader %>

<row>
  <div class="col-md-12">
    <h1 class="m-4">Contact Us</h1>
  </div>
</row>
<br>


<div id="contact" class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="card p-4">
            <div class="card-body">
              <h4>Address</h4>
              <p>Athinas 33, 10554, Athens</p>
              <h4>Email</h4>
              <p>3dlads@gmail.com</p>
              <h4>Phone</h4>
              <p>+30 6981234567</p>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card p-4">
            <div class="card-body">
              <h4 class="text-center mb-4">Please fill out this form to contact us and/or get a quote</h4>
              <hr>
              <div class="row">
                <div class="col-md-6">
                <form method="post" action="/contact">
                  <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Your Name"/>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="email" class="form-control" placeholder="Your Email"/>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Message</label>
                    <textarea name="msg" placeholder="Your Message" class="form-control" rows="4" cols="50"></textarea>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
                </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

