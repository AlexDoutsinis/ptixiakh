<% include  _layouts/shopHeader %>
  <div class="row">
    <div class="card mb-4 mt-4">
      <form action="/products" method="get">
      <h5 class="card-header">Product Search</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" name="search" class="form-control" placeholder="Search for..."/>
          <span class="input-group-btn">
            <button class="btn btn-dark" type="submit" value="Search">Go!</button>
          </span>
        </div>
      </div>
      </form>
    </div>
  </div>
  <div class="row products">
    <div class="col-xs-12"> <%# -- %>
      <div class="card my-4">
      </div>
    </div> <%# -- %>

    <% if (noMatch) { %>

      <h3 class="m-4"><%= noMatch %></h3>

    <% } %>

    <% products.forEach(function(product) { %>
      <div class="col-xs-12 col-md-4 p">
        <a href="/products/<%= product.category %>/<%= product.slug %>" class="pa">
          <img class="productImage" src="/product-images/<%= product.id %>/<%= product.image %>" alt="">
        </a>
        <br><br>
        <h3 class="mb-3 mt-5">
          <%= product.title %>
        </h3>
        <h4 class="mb-3">
          â‚¬
          <%= parseFloat(product.price).toFixed(2) %>
        </h4>

        <a class="btn btn-light" href="/products/<%= product.category %>/<%= product.slug %>" class="vd">View Details</a>
      </div>
      <% } ) %>
  </div>
  <% include  _layouts/footer %>