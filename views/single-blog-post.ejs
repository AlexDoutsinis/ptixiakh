<% include _layouts/blogHeader %>

<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-8">
      <!-- Title -->
      <h1 class="mt-4 mb-4"><%= post.title %></h1>

      <hr />

      <!-- Date/Time -->
      <% let d = 'Posted on ' + generateDate(post.date, 'MMM Do YYYY') %>
      <p class="mt-3 mb-3"><%= d %></p>

      <hr />

      <!-- Preview Image -->

      <img
        class="img-responsive img-fluid rounded mt-3 mb-3"
        src="/blog-posts-images/<%= post.image %>"
        alt=""
      />

      <hr />

      <!-- Post Content -->
      <p class="lead"><%- post.body %></p>
    </div>
  </div>
</div>
<!-- /.row -->

<% include _layouts/footer %>
