<% include _layouts/homeHeader %>

<!-- SHOWCASE SLIDER -->
<section id="showcase">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item carousel-image-1 active">
        <div class="container">
          <div class="carousel-caption d-none d-sm-block mb-5">
            <h1 class="display-3">Do you want to create a specific item?</h1>
            <p class="lead">
              Let us know if you want to create something special.
            </p>
            <a href="/contact" class="btn btn-warning btn-lg">Contact us</a>
          </div>
        </div>
      </div>
      <div class="carousel-item carousel-image-2">
        <div class="container">
          <div
            class="carousel-caption d-none d-sm-block mb-5 text-right text-dark"
          >
            <h1 class="display-3">20% off on our catalogue!</h1>
            <p class="lead">
              We welcome our new customers with 20% off on our catalogue. So,
              don't lose any more time and get the items you want!
            </p>
            <p></p>
            <a href="products" class="btn btn-success btn-lg"
              >Browse our Shop</a
            >
          </div>
        </div>
      </div>
      <div class="carousel-item carousel-image-3">
        <div class="container">
          <div
            class="carousel-caption d-none d-sm-block text-right mb-5 text-dark"
          >
            <h1 class="display-3">Follow for More!</h1>
            <p class="lead">
              Follow us on our Social Pages to learn more about news and
              discounts.
            </p>
            <a
              href="https://www.facebook.com/3DLads/?timeline_context_item_type=intro_card_work&timeline_context_item_source=1303245114&fref=tag&__xts__[0]=31.[1303245114%2C%22intro_card%22%2C%7B%7D]"
              class="btn btn-primary btn-lg"
              target="_blank"
              >Follow us!</a
            >
          </div>
        </div>
      </div>
    </div>

    <a href="#myCarousel" data-slide="prev" class="carousel-control-prev">
      <span class="carousel-control-prev-icon"></span>
    </a>
    <a href="#myCarousel" data-slide="next" class="carousel-control-next">
      <span class="carousel-control-next-icon"></span>
    </a>
  </div>
</section>

<!-- VIDEO PLAY SECTION -->
<section id="video-play">
  <div class="dark-overlay">
    <div class="row">
      <div class="col">
        <div class="container p-5">
          <a
            href="#"
            class="video"
            data-video="https://www.youtube.com/embed/U-8-lu4mq8o"
            data-toggle="modal"
            data-target="#videoModal"
          >
            <i class="fas fa-play"></i>
          </a>
          <h1>See What We Do</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<!--  PHOTO GALLERY -->
<section id="gallery" class="py-5">
  <div class="container ">
    <div class="row mb-4">
      <div class="col-md-6 ">
        <img src="/images/deathstrokestl.jpg" class="img-thumbnail img-fluid" />
      </div>
      <div class="col-md-6">
        <img src="/images/printer.jpg" class="img-thumbnail img-fluid" />
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-6">
        <img src="/images/deathstrokeraw.jpg" class="img-thumbnail img-fluid" />
      </div>
      <div class="col-md-6">
        <img
          src="/images/deathstrokefinal.jpg"
          class="img-thumbnail img-fluid"
        />
      </div>
    </div>
  </div>
</section>

<!-- HOME ICON SECTION -->
<section id="home-icons" class="pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4 mb-4 text-center">
        <i class="fas fa-lightbulb mb-2"></i>
        <h3>Think</h3>
        <p>Share your ideas with us and we'll help you make them real.</p>
      </div>
      <div class="col-md-4 mb-4 text-center">
        <i class="fas fa-cogs mb-2"></i>
        <h3>Create</h3>
        <p>
          We create your items with high quality products and give them the
          desired finish.
        </p>
      </div>
      <div class="col-md-4 mb-4 text-center">
        <i class="fas fa-check ml- mb-2"></i>
        <h3>Enjoy</h3>
        <p>The goods are delivered to you to enjoy them.</p>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="d-flex flex-column">
    <h1 class="d-flex justify-content-center mb-4 p-5 bg-dark text-white">
      Feedback
    </h1>
    <div class="container">
      <% reviews.forEach(review => { %>
      <h2 class="d-flex justify-content-center">"<%= review.name %>"</h2>
      <p class="d-flex justify-content-center"><%= review.body %></p>
      <% }) %>
    </div>
  </div>
</section>

<!-- NEWSLETTER SECTION -->
<section id="newsletter" class="text-center p-5 bg-dark text-white">
  <div class="container">
    <%- messages('messages', locals) %> <% if (errors) { %> <%
    errors.forEach(function(error) { %>
    <div class="alert alert-danger">
      <%= error.msg %>
    </div>
    <% }); %> <% } %>

    <div class="row">
      <div class="col">
        <h1>Signup For Our Newsletter</h1>
        <p>
          Signup now to be one of the first who will learn about our news and
          discounts. No spam. We promise.
        </p>
        <form
          class="form-inline justify-content-center"
          method="post"
          action="/news-letter"
        >
          <label class="sr-only" for="name">Name</label>
          <input
            type="text"
            class="form-control mb-2 mr-sm-2 mb-sm-0"
            placeholder="Enter Name"
            name="name"
          />
          <label class="sr-only" for="email">Email</label>
          <input
            type="email"
            class="form-control mb-2 mr-sm-2 mb-sm-0"
            placeholder="Enter Email"
            name="email"
          />
          <button class="btn-primary" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- VIDEO MODAL -->
<div class="modal fade" id="videoModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button class="close" data-dismiss="modal"><span>&times;</span></button>
        <iframe
          src=""
          height="350"
          width="100%"
          frameborder="0"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</div>

<script src="/js/main2.js"></script>

<% include _layouts/footer %>
