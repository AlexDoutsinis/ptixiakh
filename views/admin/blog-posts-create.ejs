<%- include('../_layouts/adminHeader') %>

  <h1>Create Posts</h1>
  <a href="/admin/blog-posts" class="btn btn-dark mt-4 mb-4">Back to all posts</a>

  <form action="/admin/blog-posts/create" method="post" enctype="multipart/form-data">

    <div class="form-group">
      <label for="title">Ttitle</label>
      <input name="title" type="text" class="form-control" id="title" placeholder="Enter title" value="<%= title %>">
    </div>

    <div class="form-group">
      <label for="file">Image Upload</label>
      <input name="image" type="file" class="form-control">
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      <textarea name="body" id="ta" cols="30" rows="10" class="form-control" id="body" placeholder="Enter Desctiption"><%= body %></textarea>
    </div>

    <button type="submit" class="btn btn-dark">Submit</button>


  </form>


  <%- include('../_layouts/adminFooter') %>